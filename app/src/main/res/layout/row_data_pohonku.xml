<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight=".2"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageKategori"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/btnlahan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".9"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNama"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:singleLine="true"
                    android:text="Nama"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtLokasi"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:singleLine="true"
                    android:text="Lokasi"
                    android:textColor="#000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:textSize="12dp"
                    android:text="Tanggal Tanam"
                    android:textColor="#686868" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:textSize="12dp"
                    android:singleLine="true"
                    android:text="Total Panen"
                    android:textColor="#686868" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTanam"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:text="Waktu Tanam"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/txtPanen"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:singleLine="true"
                    android:text="Waktu Panen"
                    android:textColor="#000" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageStatus"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/btnijobulat" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c4c4c4"
        android:orientation="horizontal"/>

    </LinearLayout>